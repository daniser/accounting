{
    "name": "daniser/accounting",
    "description": "Accounting library",
    "type": "library",
    "keywords": ["accounting", "ledger"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/daniser/accounting/issues",
        "source": "https://github.com/daniser/accounting"
    },
    "authors": [
        {
            "name": "Sergey Danilchenko",
            "email": "daniser@mail.ru"
        }
    ],
    "require": {
        "php": "^7.4",
        "daniser/entity-resolver": "*",
        "daniser/model-extensions": "^1.0",
        "illuminate/contracts": "^6.0|^7.0",
        "illuminate/database": "^6.0|^7.0",
        "illuminate/support": "^6.0|^7.0",
        "moneyphp/money": "^3.2",
        "ramsey/uuid": "^3.7|^4.0"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0|^5.0",
        "phpunit/phpunit": "^7.5|^8.4|^9.0"
    },
    "suggest": {
        "illuminate/events": "Required to utilize transaction events (^6.0|^7.0).",
        "illuminate/console": "Required to control cash flow via console commands (^6.0|^7.0)."
    },
    "autoload": {
        "psr-4": {
            "Daniser\\Accounting\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Daniser\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Daniser\\Accounting\\AccountingServiceProvider"
            ],
            "aliases": {
                "Ledger": "Daniser\\Accounting\\Facades\\Ledger",
                "Account": "Daniser\\Accounting\\Facades\\Account",
                "Transaction": "Daniser\\Accounting\\Facades\\Transaction"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
